<h1>Listing plants</h1>

<table>
  <tr>
    <th>Project</th>
    <th>Plant category</th>
    <th>User</th>
    <th>Started at</th>
    <th>Ended at</th>
    <th>Memo</th>
    <th>Lock version</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @plants.each do |plant| %>
  <tr>
    <td><%= plant.project_id %></td>
    <td><%= plant.plant_category_id %></td>
    <td><%= plant.user_id %></td>
    <td><%= plant.started_at %></td>
    <td><%= plant.ended_at %></td>
    <td><%= plant.memo %></td>
    <td><%= plant.lock_version %></td>
    <td><%= link_to 'Show', plant %></td>
    <td><%= link_to 'Edit', edit_plant_path(plant) %></td>
    <td><%= link_to 'Destroy', plant, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

