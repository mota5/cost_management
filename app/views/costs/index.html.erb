<h1>Listing costs</h1>

<table>
  <tr>
    <th>Project</th>
    <th>Activity</th>
    <th>User</th>
    <th>Started at</th>
    <th>Ended at</th>
    <th>Memo</th>
    <th>Lock version</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @costs.each do |cost| %>
  <tr>
    <td><%= cost.activity.project.name %></td>
    <td><%= cost.activity.name %></td>
    <td><%= cost.user.family_name %></td>
    <td><%= cost.started_at %></td>
    <td><%= cost.ended_at %></td>
    <td><%= cost.memo %></td>
    <td><%= cost.lock_version %></td>
    <td><%= link_to 'Show', cost %></td>
    <td><%= link_to 'Edit', edit_cost_path(cost) %></td>
    <td><%= link_to 'Destroy', cost, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

