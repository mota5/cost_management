    <th>Ended at</th>
    <th>Memo</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
  </thead>

  <tbody id="costs_tbody">
    <%= render :partial=>"costs", :locals=>{:costs=>@costs} -%>
  </tbody>
</table>

