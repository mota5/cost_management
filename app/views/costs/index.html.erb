<h1>Listing costs</h1>
<% form_tag("costs/costs", :remote=>true) do |f| %>
  <%= select_tag :project_id,
        options_from_collection_for_select(@projects, :id, :name, params[:p]),
        :url=>{:action=>"index", :format=>"html"},
        :name=>"p",
        :include_blank=>true -%>
      <%= submit_tag "適用", :submit_with=>"更新中・・・" %>
