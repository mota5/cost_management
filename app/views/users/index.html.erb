<h1>Listing users</h1>

<table>
  <tr>
    <th>Login code</th>
    <th>Login passwd</th>
    <th>Family name</th>
    <th>First name</th>
    <th>Family kana name</th>
    <th>First kana name</th>
    <th>Email address</th>
    <th>Superior user</th>
    <th>Lock version</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.login_code %></td>
    <td><%= user.login_passwd %></td>
    <td><%= user.family_name %></td>
    <td><%= user.first_name %></td>
    <td><%= user.family_kana_name %></td>
    <td><%= user.first_kana_name %></td>
    <td><%= user.email_address %></td>
    <td><%= user.superior_user_id %></td>
    <td><%= user.lock_version %></td>
    <td><%= link_to 'Show', user %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <td><%= link_to 'Destroy', user, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

